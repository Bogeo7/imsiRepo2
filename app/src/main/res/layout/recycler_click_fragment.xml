<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="@string/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/video_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="22dp" />

    <com.google.android.youtube.player.YouTubePlayerView
            android:layout_width="411dp"
            android:layout_height="221dp"
            android:id="@+id/youTubePlayerView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="65dp"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:text="@string/require_ingerdient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/require_ingredient"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/youTubePlayerView" />

    <TextView
            android:text="@string/ingerdient_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ingredient_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/require_ingredient" />

    <TextView
            android:text="@string/recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recipe_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ingredient_text" />

</androidx.constraintlayout.widget.ConstraintLayout>